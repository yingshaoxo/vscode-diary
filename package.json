{
	"name": "vscode-diary",
	"displayName": "VSCode Diary",
	"description": "Help you to write your diary with VSCode",
	"icon": "resources/icon.png",
	"version": "0.0.6",
	"publisher": "yingshaoxo",
	"author": {
		"name": "yingshaoxo",
		"email": "yingshaoxo@gmail.com"
	},
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/yingshaoxo/vscode-diary"
	},
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:vscode-diary"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vscode-diary",
					"title": "VSCode Diary",
					"icon": "resources/dark/note.svg"
				}
			]
		},
		"views": {
			"vscode-diary": [
				{
					"id": "vscode-diary",
					"name": "",
					"icon": "resources/dark/note.svg",
					"contextualTitle": "VSCode Diary"
				}
			],
			"explorer": []
		},
		"commands": [
			{
				"command": "vscode-diary.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "vscode-diary.addEntry",
				"title": "Add",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "vscode-diary.takeNotesEntry",
				"title": "Take notes",
				"icon": "resources/dark/note.svg"
			},
			{
				"command": "vscode-diary.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "vscode-diary.addNewFileEntry",
				"title": "Add new file"
			},
			{
				"command": "vscode-diary.renameEntry",
				"title": "Rename"
			}
		],
		"menus": {
			"commandPalette": [],
			"view/title": [
				{
					"command": "vscode-diary.refreshEntry",
					"when": "view == vscode-diary",
					"group": "navigation"
				},
				{
					"command": "vscode-diary.addEntry",
					"when": "view == vscode-diary",
					"group": "navigation"
				},
				{
					"command": "vscode-diary.takeNotesEntry",
					"when": "view == vscode-diary"
				}
			],
			"view/item/context": [
				{
					"command": "vscode-diary.deleteEntry",
					"when": "view == vscode-diary && viewItem == dependency",
					"group": "mygr@3"
				},
				{
					"command": "vscode-diary.addNewFileEntry",
					"when": "view == vscode-diary && viewItem == dependency",
					"group": "mygr@1"
				},
				{
					"command": "vscode-diary.renameEntry",
					"when": "view == vscode-diary && viewItem == dependency",
					"group": "mygr@2"
				}
			]
		},
		"configuration": [
			{}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^12.12.0",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"minimist": "^0.2.1",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}